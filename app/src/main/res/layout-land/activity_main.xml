<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:clickable="true" />

    <TextView
        android:text="@string/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:text="@string/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bigphone"
        android:longClickable="false"
        android:contentDescription="@string/image_name"
        android:layout_below="@+id/button"
        android:layout_marginBottom="90dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/daclogo"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginBottom="32dp"
        android:src="@drawable/wearable_s"
        android:clickable="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop" />

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:src="@drawable/materials_d"
        android:clickable="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:src="@drawable/androids_tools"
        android:clickable="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Android 5.0"
        android:id="@+id/textView"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/button2"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The Android 5.0 update adds a variety jf new features for your apps, such as  notifications on the lock screen."
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn More"
        android:id="@+id/button4"
        android:textColor="#ffffffff"
        android:background="#ffff0000"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>